{
	"compilerOptions": {
		"target": "es2017",
		"module": "esnext",
		"rootDir": "./src",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules"
	]
}